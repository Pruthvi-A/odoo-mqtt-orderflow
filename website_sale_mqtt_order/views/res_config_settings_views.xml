<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_mqtt" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.mqtt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_setting_container']" position="inside">
                <div class="app_settings_block" data-string="Website Sale MQTT Order"
                     string="Website Sale MQTT Order" data-key="website_sale_mqtt_order">
                    <h2>Website Sale MQTT Order</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <label for="website_sale_mqtt_brand"/>
                                <div class="o_setting_right_pane">
                                    <field name="website_sale_mqtt_brand"/>
                                    <div class="text-muted">Used to build default topics</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <label for="website_sale_mqtt_broker_id"/>
                                <div class="o_setting_right_pane">
                                    <field name="website_sale_mqtt_broker_id"/>
                                    <div class="text-muted">Select configured broker from MQTT Integration</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <label for="website_sale_mqtt_topic_orders"/>
                                <div class="o_setting_right_pane">
                                    <field name="website_sale_mqtt_topic_orders"/>
                                    <div class="text-muted">Default: brandname/orders</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <label for="website_sale_mqtt_topic_status"/>
                                <div class="o_setting_right_pane">
                                    <field name="website_sale_mqtt_topic_status"/>
                                    <div class="text-muted">Default: brandname/status</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>



