<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_mqtt_publish_retry" model="ir.cron">
        <field name="name">MQTT Publish Retry</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model.search([('mqtt_publish_fail_count','&gt;',0)]).with_context(cron=True)._publish_order_to_mqtt()</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>
</odoo>
