<odoo>
    <record id="view_party_hall_booking_tree" model="ir.ui.view">
        <field name="name">party.hall.booking.tree</field>
        <field name="model">party.hall.booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_name"/>
                <field name="hall_id"/>
                <field name="booking_date"/>
                <field name="slot"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_party_hall_booking_form" model="ir.ui.view">
        <field name="name">party.hall.booking.form</field>
        <field name="model">party.hall.booking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="customer_name"/>
                        <field name="hall_id"/>
                        <field name="booking_date"/>
                        <field name="slot"/>
                        <field name="customer_email"/>
                        <field name="customer_phone"/>
                        <field name="notes"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>